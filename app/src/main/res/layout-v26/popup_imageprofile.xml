<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@drawable/border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtClose_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="4dp"
        android:background="@drawable/cicrculo_close"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/backgroundBar"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/take_picture"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:fontFamily="@font/displayfont"
        android:text="@string/fes_te_una_foto"
         />

    <Button
        android:id="@+id/image_gallery"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:fontFamily="@font/displayfont"
        android:text="@string/des_de_la_galeria"
         />

</LinearLayout>